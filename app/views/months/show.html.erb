<div class="after-nav container">
<h1><span title="This page shows details of your month broken down into Income and Expenses. You may have as many categories as you need under both. If you have a goal it will have a category on this page."><%= @month.name %> <small><%= @month.month_date.strftime("%B") %> - <%= @month.month_date.year %> <small><%= link_to "edit month", edit_month_path, title: "Edit this month's detail" %> | <%= link_to "delete", month_path, method: :delete, data: {confirm: "Are you sure you want to delete this month: '#{@month.name}'?"} %></small></small> <a href="#"> <%= image_tag "info-grey.png", class: "itips" %></a></span></h1>

<div class="addcat">
  <div class="catform">
  <h4 class="text-right"><a href="#"><span class="close-add glyphicon glyphicon-remove" aria-hidden="true"></span></a></h4>
    <h2 class="white-text">Add New Category</h2>
    <%= form_for [@month, Category.new] do |f| %>
      <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
      <%= f.label :expense, "Expense?", class: "white-text" %> <%= f.check_box :expense %>
      <%= f.text_area :desc, placeholder: "Category Description", class: "form-control" %>
      <%= f.number_field :proj_val, placeholder: "Expected month amount", class: "form-control" %><br>
      <p class="white-text"><a id="show-periods" href="#">Add actual values for periods 1-4?</a></p>
      <div class="periods">
      <%= f.number_field :period1, placeholder: "Amount", class: "form-control" %>
      <%= f.number_field :period2, placeholder: "Amount", class: "form-control" %>
      <%= f.number_field :period3, placeholder: "Amount", class: "form-control" %>
      <%= f.number_field :period4, placeholder: "Amount", class: "form-control" %>
      </div>
      <%= f.submit "Add Category", class: "btn btn-primary", :disable_with => 'Submiting...' %>
    <% end %>
  </div>
</div>
<p><a href="#" class="cat-add-link", title="Add a new expense or income category">Add New Category</a></p>
<% if @income.any? %>
<h3 title="Income categories below">Income <a href="#"> <%= image_tag "info-grey.png", class: "itips" %></a></h3><br>

<div class="row">
  <div class="col-sm-8">
    <ul>
<% @income.each do |cat| %>
    <% emo_val = (cat.proj_val - (cat.period1 + cat.period2 + cat.period3 + cat.period4)) %>
    <% emoji = "neut.png" %>
    <% emoji = "happy.png" if emo_val < 0 %>
    <% emoji = "sad.png" if emo_val > 0 %>

    <div class="disp">
    <!-- how to correctly ref images <img src="/assets/sad.png" alt="sad"> -->
    <li title="Click on the name to see details about this category. The changes you make are automatically saved and the faces change accordingly."><%= image_tag emoji %> <a class="show-cat-edit" style="color:green" href="#" title="Income catogory name: click me to see my details. Changes save automatically"><%= cat.name.capitalize %></a> -
        Projected: $<span class ="pval"><%= cat.proj_val %></span> | 
        Actual: $<span class='amt'><%= cat.period1 + cat.period2 + cat.period3 + cat.period4 %></span> <a href="#" title="click me to see the details for this income category. Changes save automatically"><span class="glyphicon glyphicon-plus show-cat-edit" aria-hidden="true"></span></a> 
        <a href="#"> <%= image_tag "info-grey.png", class: "itips" %></a></li>
    
    <div class="cat-edit-form hidden">
    <%= form_for cat do |f| %>
    <div class="form-group form-inline">
      <%= f.label :name, "Name:" %>
      <%= f.text_field :name, class: "form-control"  %> 
      <%= link_to "Delete", category_path(cat), method: :delete, data: {confirm: "Are you sure you want to delete this category: '#{cat.name}'?"} %> |
      <a class="show-desc" href="#"><%= f.label :desc, "Description" %></a><br>
      <%= f.text_area :desc, size: "41x5", class: "desc form-control hidden" %> <br>
      <%= f.label :proj_val, "Projected Amount This Month:" %>
      <div class="input-group">
      <div class="input-group-addon">$</div>
      <%= f.number_field :proj_val, class: "form-control" %><br>
      </div>
      <h5 title="The fields below are for adding the actual values of your income for this category on about a weekly basis. Don't worry, your budget sends you emails to remind you to add these.">Actual income for periods (week): <a href="#"> <%= image_tag "info-grey.png", class: "itips" %></a></h5>
      <div class="actuals">
        <div class="input-group">
        <div class="input-group-addon">1 - $</div>
        <%= f.number_field :period1, class: "form-control", title: "For actual income of period1 (~week1) of this month for this category" %>
        <div class="input-group-addon">3 - $</div>
        <%= f.number_field :period3, class: "form-control", title: "For actual income of period3 (~week3) of this month for this category" %>
        </div>
        <div class="input-group">
        <div class="input-group-addon">2 - $</div>
        <%= f.number_field :period2, class: "form-control", title: "For actual income of period2 (~week2) of this month for this category" %>
        <div class="input-group-addon">4 - $</div>
        <%= f.number_field :period4, class: "form-control", title: "For actual income of period4 (~week4) of this month for this category" %>
        </div>
        <p><a href='#' class="btn btn-primary dummy">Save</a></p>
      </div>
    </div>
    <% end %>
    </div>
    </div>

<% end %>
  </ul>
  </div>
  <div class="col-sm-4 right-side">
  <h4 title="The Pie Chart below shows the proportions of your projected income by category, for this month.">Projected Income Categories <a href="#"> <%= image_tag "info-grey.png", class: "itips" %></a></h4>
    <div id="i-pie" data-url="<%= monthchart_path(@month) %>"></div>
  </div>
</div>
<% end %>
  <hr>

<% if @expenses.any? %>
<h3 title="Expense categories below">Expenses <a href="#"> <%= image_tag "info-grey.png", class: "itips" %></a></h3><br>

<div class="row">
  <div class="col-sm-8">
    <ul>
<% @expenses.each do |cat| %>

    <% emo_val = cat.proj_val - (cat.period1 + cat.period2 + cat.period3 + cat.period4) %>
    <% emoji = "neut.png" %>
    <% emoji = "happy.png" if emo_val > 0 %>
    <%emoji = "sad.png" if emo_val < 0 %>

    <div class="disp">
    <li title="Click on the name to see details about this category. The changes you make are automatically saved and the faces change accordingly."><%= image_tag emoji %> <a class="show-cat-edit" style="color:red" href="#" title="Expense catogory name: click me to see my details. Changes save automatically."><%= cat.name.capitalize %></a> -
        Projected: $<span class ="pval"><%= cat.proj_val %></span> | 
        Actual: $<span class='amt'><%= cat.period1 + cat.period2 + cat.period3 + cat.period4 %></span> <a href="#" title="click me to see the details for this expense category. Changes save automatically."><span class="glyphicon glyphicon-plus show-cat-edit" aria-hidden="true"></span></a> <a href="#"> <%= image_tag "info-grey.png", class: "itips" %></a></li>
    <div class="cat-edit-form hidden">
    <%= form_for cat do |f| %>
      <div class="form-group form-inline">
        <%= f.label :name, "Name:" %>
        <%= f.text_field :name, class: "form-control"  %> 
        <%= link_to "Delete", category_path(cat), method: :delete, data: {confirm: "Are you sure you want to delete this category: '#{cat.name}'?"} %> |
        <a class="show-desc" href="#"><%= f.label :desc, "Description" %></a><br>
        <%= f.text_area :desc, size: "41x5", class: "desc form-control hidden" %> <br>
        <%= f.label :proj_val, "Projected Expenses This Month:" %>
        <div class="input-group">
        <div class="input-group-addon">$</div>
        <%= f.number_field :proj_val, class: "form-control" %><br>
        </div>
        <h5 title="The fields below are for adding the actual values of your expenses for this category on about a weekly basis. Don't worry, your budget sends you emails to remind you to add these.">Actual expenses for periods (week): <a href="#"> <%= image_tag "info-grey.png", class: "itips" %></a></h5>
        <div class="actuals">
          <div class="input-group">
          <div class="input-group-addon">1 - $</div>
          <%= f.number_field :period1, class: "form-control", title: "For actual expense of period1 (~week1) of this month for this category" %>
          <div class="input-group-addon">3 - $</div>
          <%= f.number_field :period3, class: "form-control", title: "For actual expense of period3 (~week3) of this month for this category"  %>
          </div>
          <div class="input-group">
          <div class="input-group-addon">2 - $</div>
          <%= f.number_field :period2, class: "form-control", title: "For actual expense of period2 (~week2) of this month for this category" %>
          <div class="input-group-addon">4 - $</div>
          <%= f.number_field :period4, class: "form-control", title: "For actual expense of period4 (~week4) of this month for this category"  %>
          </div>
          <p><a href='#' class="btn btn-primary dummy">Save</a></p>
        </div>
      </div>
    <% end %>
    </div>
    </div>

  <% end %>
    </ul>
  </div>
  <div class="col-sm-4 right-side">
  <h4 title="The Pie Chart below shows the proportions of your projected expenses by category, for this month.">Projected Expense Categories <a href="#"> <%= image_tag "info-grey.png", class: "itips" %></a></h4>
    <div id="e-pie" data-url="<%= monthchart_path(@month) %>"></div>
  </div>
</div>
<% end %>
<hr>
<script>
  $('.nmonth').toggleClass('active');
</script>
</div>